  "schemas": {
    "Sender": {
      "sender_id": "integer",
      "name": "string",
      "phone_number": "string"
    },
    "Receiver": {
      "receiver_id": "integer",
      "account_owner": "string",
      "phone_number": "string"
    },
    "SMS": {
      "sms_id": "integer",
      "date": "string (ISO 8601 datetime)",
      "body": "string",
      "address": "string",
      "readable_date": "string (ISO 8601 datetime)",
      "service_center": "string",
      "status": "string"
    },
    "TransactionCategory": {
      "category_id": "integer",
      "category_name": "string",
      "description": "string"
    },
    "SystemLog": {
      "log_id": "integer",
      "log_date": "string (ISO 8601 datetime)",
      "log_level": "string",
      "message": "string"
    },
    "Transaction": {
      "transaction_id": "integer",
      "amount": "decimal",
      "transaction_date": "string (ISO 8601 datetime)",
      "balance": "decimal",
      "sender_message": "string",
      "sms": { "sms_id": "integer", "body": "string" },
      "sender": { "sender_id": "integer", "name": "string" },
      "receiver": { "receiver_id": "integer", "account_owner": "string" },
      "categories": [
